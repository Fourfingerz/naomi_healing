<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Scheduled Time", :scheduled_date %></th>
			<th><%= casein_sort_link "Session Type", :session_type %></th>
			<th><%= casein_sort_link "Session Balance", :session_balance_due %></th>
			<th><%= casein_sort_link "Client Surname", :last_name %></th>
			<th><%= casein_sort_link "First Name", :first_name %></th>
			<th><%= casein_sort_link "Cell Phone", :cell_phone %></th>
			<th><%= casein_sort_link "Alt Phone", :alternative_phone %></th>
			<th><%= casein_sort_link "Email", :email_address %></th>
		</tr>
	</thead>
	
	<tr>
		<% visits.each do |visit| %>
		<td><%= casein_table_cell_link visit.scheduled_date, casein_visit_path(visit) %></td>
		<td><%= casein_table_cell_link visit.session_type, casein_visit_path(visit) %></td>
		<td><%= casein_table_cell_link visit.session_length, casein_visit_path(visit) %></td>
		<td><%= casein_table_cell_link visit.session_balance_due, casein_visit_path(visit) %></td>
		<% end %>
		<% clients.each do |client| %>
		<td><%= casein_table_cell_link client.last_name, casein_client_path(client) %></td>
		<td><%= casein_table_cell_link client.first_name, casein_client_path(client) %>
		</td>
		<td><%= casein_table_cell_link client.cell_phone, casein_client_path(client) %></td>
		<td><%= casein_table_cell_link client.alternative_phone, casein_client_path(client) %></td>
		<td><%= casein_table_cell_link client.email_address, casein_client_path(client) %></td>
	</tr>
	<% end %>
</table>