<!-- Scaffolding generated by Casein v5.0.1.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Session Type", :session_type %></th>
			<th><%= casein_sort_link "Scheduled date", :scheduled_date %></th>
			<th><%= casein_sort_link "Session Notes", :session_notes %></th>
			<th><%= casein_sort_link "Session length", :session_length %></th>
			<th><%= casein_sort_link "Session balance due", :session_balance_due %></th>
			<th><%= casein_sort_link "Session balance paid", :session_balance_paid %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% visits.each do |visit| %>
		<tr>
			<td><%= casein_table_cell_link visit.session_type, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.scheduled_date, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.session_notes, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.session_length, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.session_balance_due, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.session_balance_paid, casein_visit_path(visit) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_visit_path(visit), :method => :delete, :data => { :confirm => "Are you sure you want to delete this visit?" }) %>
			</td>
		</tr>
	<% end %>
</table>