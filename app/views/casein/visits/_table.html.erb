<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Visiting date", :visiting_date %></th>
			<th><%= casein_sort_link "Concerns questions", :concerns_questions %></th>
			<th><%= casein_sort_link "Scheduled date", :scheduled_date %></th>
			<th><%= casein_sort_link "Scheduled time", :scheduled_time %></th>
			<th><%= casein_sort_link "Notes comments", :notes_comments %></th>
			<th><%= casein_sort_link "Diagnosis advice", :diagnosis_advice %></th>
			<th><%= casein_sort_link "Session length", :session_length %></th>
			<th><%= casein_sort_link "Session balance due", :session_balance_due %></th>
			<th><%= casein_sort_link "Session balance paid", :session_balance_paid %></th>
			<th><%= casein_sort_link "Overall balance", :overall_balance %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% visits.each do |visit| %>
		<tr>
			<td><%= casein_table_cell_link visit.visiting_date, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.concerns_questions, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.scheduled_date, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.scheduled_time, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.notes_comments, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.diagnosis_advice, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.session_length, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.session_balance_due, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.session_balance_paid, casein_visit_path(visit) %></td>
			<td><%= casein_table_cell_link visit.overall_balance, casein_visit_path(visit) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_visit_path(visit), :method => :delete, :data => { :confirm => "Are you sure you want to delete this visit?" }) %>
			</td>
		</tr>
	<% end %>
</table>