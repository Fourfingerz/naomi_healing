	</thead>
	
	<% clients.each do |client| %>
		<tr>
			<td><%= casein_table_cell_link client.first_name, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.last_name, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.address_1, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.address_2, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.city, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.state, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.zip_code, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.cell_phone, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.alternative_phone, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.concerns_questions, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.gender, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.birth_date, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.email_address, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.signup_date, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.client_age, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.overall_balance, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.emergency_contact_name, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.emergency_contact_phone, casein_client_path(client) %></td>
			<td><%= casein_table_cell_link client.emergency_relationship_to_client, casein_client_path(client) %></td> 
